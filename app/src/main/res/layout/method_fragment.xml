<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f3f3f3"
    tools:context=".MethodFragment">
    <TextView
        android:id="@+id/fpText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginStart="10sp"
        android:textSize="22sp"

        android:textColor="@color/black"
        android:textStyle="bold"
        android:text="Available methods"
        android:gravity="center"
        android:layout_marginBottom="5sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/searchField"
        />
    <androidx.appcompat.widget.SearchView
        android:id="@+id/searchField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f2f2f2"
        android:textAlignment="textStart"
        app:layout_constraintEnd_toEndOf="@+id/fpText"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/fpText"
        app:layout_constraintTop_toBottomOf="@+id/fpText"
        android:layout_marginStart="32sp"
        android:layout_marginEnd="32sp"  />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/fpRecycleView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_weight="2"
        android:divider="#000"
        android:dividerHeight="10dp"
        app:layout_constraintEnd_toEndOf="@+id/searchField"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/searchField"
        app:layout_constraintTop_toBottomOf="@+id/searchField"/>


</androidx.constraintlayout.widget.ConstraintLayout>